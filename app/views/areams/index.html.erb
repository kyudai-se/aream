<h1>登録エリア一覧</h1>

<table>
  <thead>
    <tr>
      <th>登録日時</th>
      <th>登録マシン</th>
      <th>登録ユーザー</th>
      <th>更新日時</th>
      <th>更新マシン</th>
      <th>更新ユーザー</th>
      <th>地区コード</th>
      <th>地区名</th>
      <th>地区名（略称）</th>
      <th>地区名（カナ）</th>
    </tr>
  </thead>

  <tbody>
    <% @areams.each do |aream| %>
      <tr>
        <td><%= aream.entdate %></td>
        <td><%= aream.entmcn %></td>
        <td><%= aream.entclt %></td>
        <td><%= aream.edtdate %></td>
        <td><%= aream.edtmcn %></td>
        <td><%= aream.edtclt %></td>
        <td><%= aream.area_cd %></td>
        <td><%= aream.area_j %></td>
        <td><%= aream.area_a %></td>
        <td><%= aream.area_k %></td>
        <td><%= link_to '確認', aream %></td>
        <td><%= link_to '編集', edit_aream_path(aream) %></td>
        <td><%= link_to '削除', aream, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

